<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout 
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
    android:layout_width="match_parent"
            android:gravity="center_horizontal"
    android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/info_title"
        />

        <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
            android:gravity="center_horizontal"
        android:textSize="20dp"
        android:text="@string/whats_coronavirus_title"
        />
            <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
            android:gravity="center_horizontal"
        android:textSize="14dp"
        android:text="@string/whats_coronavirus"
        />

                <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
            android:gravity="center_horizontal"
        android:textSize="20dp"
        android:text="@string/whats_covid19_title"
        />
            <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
            android:gravity="center_horizontal"
        android:textSize="14dp"
        android:text="@string/whats_covid19"
        />

                        <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
            android:gravity="center_horizontal"
        android:textSize="20dp"
        android:text="@string/covid_symptoms_title"
        />
            <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
            android:gravity="center_horizontal"
        android:textSize="14dp"
        android:text="@string/covid_symptoms"
        />

                    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
            android:gravity="center_horizontal"
        android:textSize="12dp"
        android:text="@string/source_oms"
        />


</LinearLayout>


</ScrollView>


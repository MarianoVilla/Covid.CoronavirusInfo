
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardGlobalCases"
        android:layout_below="@id/txtTitle"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:autoSizeTextType="uniform"
                android:textSize="30sp"
                android:drawableLeft="@drawable/virus_coronavirus_virus_covid_covid_icon_134860"
                android:text="@string/title_infected"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:autoSizeTextType="uniform"
                android:textSize="40sp"
                android:id="@+id/txtGlobalCases"
                android:text="0"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cardGlobalDeaths"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        card_view:cardCornerRadius="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_below="@id/cardGlobalCases">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:autoSizeTextType="uniform"
                android:textSize="30sp"
                android:drawableLeft="@drawable/rip_tomb_cemetery_icon_134861"
                android:text="@string/title_deaths"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:autoSizeTextType="uniform"
                android:textSize="40sp"
                android:id="@+id/txtGlobalDeaths"
                android:text="0"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardGlobalRecovered"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        card_view:cardCornerRadius="5dp"
        android:layout_below="@id/cardGlobalDeaths">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:autoSizeTextType="uniform"
                android:textSize="30sp"
                android:drawableLeft="@drawable/thy"
                android:text="@string/title_recovered"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:autoSizeTextType="uniform"
                android:textSize="40sp"
                android:id="@+id/txtGlobalRecovered"
                android:text="0"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>